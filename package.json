{
  "name": "mxunit-watch",
  "version": "0.7.0",
  "description": "Watches a directory for file changes and runs tests whenever they occur",
  "preferGlobal": true,
  "directories": {
    "bin": "./bin"
  },
  "main": "index.js",
  "bin": {
    "mxunit-watch": "./bin/mxunit-watch"
  },
  "dependencies": {
    "async": "~0.2.9",
    "commander": "~2.0.0",
    "glob": "^4.0.5",
    "request": "~2.27.0",
    "underscore": "~1.5.2",
    "watchr": "~2.4.3",
    "xcolor": "~0.1.0"
  },
  "devDependencies": {},
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "gruntplugin",
    "ColdFusion",
    "MXUnit",
    "testing",
    "TDD"
  ],
  "author": "Adam Tuttle <adam@fusiongrokker.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/atuttle/mxunit-watch.git"
  },
  "bugs": {
    "url": "https://github.com/atuttle/mxunit-watch/issues"
  }
}
